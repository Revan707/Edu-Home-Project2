@model IEnumerable<Notice>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using EduHome2.UI.ViewModels
@using EduHome2.Core.Entities
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Notice table</h4>
        <div class="table-responsive">
            <a asp-area="EduHome2Admin" asp-controller="Notice" asp-action="Create" class="btn btn-success waves-effect waves-light">Create</a>
            <table class="table mb-0">

                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var notice in Model)
                    {
                        <tr>
                            <td>@notice.Date</td>
                            <td>@notice.Description</td>
                            <td class="buttons" style="display:flex;gap:5px">
                                <a asp-action="Update" asp-route-id="@notice.Id" class="btn btn-info">Update</a>
                                <a asp-action="Delete" asp-route-id="@notice.Id" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                        count++;
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>

