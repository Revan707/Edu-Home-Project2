@using EduHome2.Core.Entities;
@model  Course
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete";
}

<div class="card">
    <div class="card-body">
        <img src="@Model.ImagePath" style="width:200px" />
        <h4 class="card-title">@Model.Title</h4>
        <h4 class="card-title-description">@Model.Description</h4>
        <p class="card-title-catagoryId">@Model.CourseCatagoryId</p>
        <div class="d-flex flex-wrap gap-2">
            <form method="post" asp-route-id="@Model.Id">
                <button type="submit" class="btn btn-danger waves-effect waves-light">Delete</button>
                <a asp-area="EduHome2Admin" asp-controller="Course" asp-action="Index"  class="btn btn-light waves-effect">Back to List</a>
            </form>
        </div>
    </div>
</div>

