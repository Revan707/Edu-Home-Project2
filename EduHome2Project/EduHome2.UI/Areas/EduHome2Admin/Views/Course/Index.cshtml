@using EduHome2.Core.Entities;
@model IEnumerable<Course>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Course table</h4>
                <div class="table-responsive">
                    <a asp-area="EduHome2Admin" asp-controller="Course" asp-action="Create" class="btn btn-success waves-effect waves-light">Create</a>
                    <table class="table mb-0">

                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Catagory</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model)
                            {
                                <tr>
                                    <th scope="row"><img style="width:250px" src="@course.ImagePath" /></th>
                                    <td>@course.Title</td>
                                    <td>@course.Description</td>
                                    <td>@course.CourseCatagoryId</td>
                                    <td  class="buttons" style="display:flex;gap:5px">
                                        <a type="button" class="btn btn-info waves-effect waves-light" asp-route-id="@course.Id" asp-action="Update">Update</a>
                                        <a type="submit" class="btn btn-danger waves-effect waves-light" asp-route-id="@course.Id" asp-action="Delete">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>



