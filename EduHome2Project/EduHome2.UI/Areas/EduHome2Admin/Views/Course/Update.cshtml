@model Course
@{
    ViewData["Title"] = "Update";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Update Course</h4>
        <img src="@Model.ImagePath" style="width:200px" />
        <form method="post" class="app-search d-none d-lg-block">
            <div class="mb-3 row">
                <label asp-for="Title" for="example-text-input" class="col-md-2 col-form-label">Title</label>
                <div class="col-md-10">
                    <input asp-for="Title" class="form-control" pla="text">
                    <span class="text-danger" asp-validation-for="Title"></span>

                </div>
            </div><div class="mb-3 row">
                <label asp-for="Description" for="example-text-input" class="col-md-2 col-form-label">Description</label>
                <div class="col-md-10">
                    <input asp-for="Description" class="form-control" type="text">
                    <span class="text-danger" asp-validation-for="Description"></span>

                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="CourseCatagoryId" for="example-email-input" class="col-md-2 col-form-label"> CourseCatagoryId</label>
                <div class="col-md-10">
                    <input asp-for="CourseCatagoryId" class="form-control" type="text">
                    <span class="text-danger" asp-validation-for="CourseCatagoryId"></span>
                </div>
            </div>

            <div>
                <button type="submit" class="btn btn-primary waves-effect waves-light">Update</button>
            </div>
        </form>
    </div>
</div>

